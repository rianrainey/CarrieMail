<%= form_for([@catalog, @note]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> kept this note from being created:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="content">
<div class="form">
	<div id="note-content">
		<div class="field">
			<%= f.text_field :greeting, :placeholder => "Dear ..." -%>
		</div>
		<%= f.text_area :body, :rows=>10, :cols=>45,
						:placeholder => "Type in the text of your message here.  We'll print it on a 3x5 card and sent it off for you!"%>
		<div class="field">
			<%= f.text_field :closing, :placeholder => "Sincerely," -%>
	  	</div>
		<div class="field">
			<%= f.text_field :signature, :placeholder => "Your Name Here" -%>
		</div>
	</div>

	<div id="note-address">
		Address Letter to:
		<div class="field">
			<%= f.select :recipient_id, @recipients, :selected => params[:recipient_id] -%>
			<%= link_to "New", new_user_recipient_path(@current_user)-%>
	    </div>
	</div>
	
	<div id="return-address">
		Return Address:
		<div class="field">
			<%= f.text_field :return_name, :placeholder => current_user.name -%>
		</div>
		<div class="field">
			<%= f.text_field :return_street, :placeholder => 'Street #' -%>
		</div>
		<div class="field">
			<%= f.text_field :return_addr_line2, :placeholder => 'Office #, Apartment #, etc.', :size => 60 %>
		</div>
    	<div class="field">
	    	<%= f.text_field :return_city, :placeholder => 'City'%>
			<%= f.select :return_state, Carmen::state_codes('US') %>
	    	<%= f.text_field :return_zip, :placeholder => 'Zip', :size => 15 %>
	  	</div>
		
	<div id="check-button">
		<%= f.submit "Check" -%>
	</div>
	
<% end %>
</div>
</div>

