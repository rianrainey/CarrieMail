<%= form_for([@catalog, @note]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> kept this note from being created:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div id="content">
<div class="form">
	<div id="note-content">
		<div class="field">
	    	Subject: <%= f.text_field :title, :placeholder => "Subject of the letter"%><br/>
	  	</div>
		<div class="field">
			<%= f.text_field :greeting, :placeholder => "Dear ..." -%>
		</div>
		<%= f.text_area :body, 
						:placeholder => "Type in the text of your message here.  We'll print it on a 3x5 card and sent it off for you!"%>
		<div class="field">
			<%= f.text_field :closing, :placeholder => "Sincerely," -%>
	  	</div>
		<div class="field">
			<%= f.text_field :signature, :placeholder => @current_user.name -%>
		</div>
	</div>

	<div id="note-address">
		<div class="field">
			<%= f.select :recipient_id, @recipients, :selected => params[:recipient_id] -%>
			<%= link_to "New", new_user_recipient_path(@current_user)-%>
	    </div>
	</div>

	<div id="check-button">
		<%= link_to content_tag(:h1, "Check"), [@catalog, @note] %>
	</div>
	
<% end %>
</div>
</div>

