<h1>Notes created by <%= current_user.name %></h1>

<%= link_to 'Send A New Note', new_catalog_note_path(@catalog) %>

<% if @catalog.notes.count > 0 %>
<table>
  <tr>
    <th>Created</th>
    <th>Description</th>
    <th>Sent To</th>
    <th>Status</th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= note.created_at.strftime("%m/%d/%y") %></td>
    <td><%= note.title %></td>
    <td><%= note.recipient.name %></td>
    <td><%= note.status_description %></td>
    <td><%= link_to 'HTML', [@catalog, note] %> | <%= link_to 'PDF', note.pdfdoc.url -%></td>
    <td>| <%= link_to 'Edit', edit_catalog_note_path(@catalog, note) %></td>
    <td>| <%= link_to 'Delete', [@catalog, note], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% else %>
<p><%= current_user.name -%> Needs to create a note first!</p>
<% end %>

