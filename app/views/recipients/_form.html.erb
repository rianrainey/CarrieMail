<%= form_for([@user, @recipient], :html => {:multipart => true}) do |f| %>
  <% if @recipient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipient.errors.count, "error") %> prohibited this recipient from being saved:</h2>

      <ul>
      <% @recipient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :first_name, :placeholder => 'First Name'%>
    <%= f.text_field :last_name, :placeholder => 'Last Name'%>
  </div>
  <div class="field">
    <%= f.text_field :street, :placeholder => 'Street Address', :size => 60%>
  </div>
  <div class="field">
    <%= f.text_field :addr_line2, :placeholder => 'Office #, Apartment #, etc.', :size => 60 %>
  </div>
  <div class="field">
    <%= f.text_field :city, :placeholder => 'City'%>
	<%= f.select :state, Carmen::state_codes('US') %>
    <%= f.text_field :zip, :placeholder => 'Zip', :size => 15 %>
  </div>
  <div class="field">
    <%= f.text_field :email, :placeholder => 'Email', :size => 45 %>
  </div>
  <div class="field">
	<%= f.label :photo, "Photo"-%>
	<%= f.file_field :photo -%>
  </div>
  <div class="actions">
    <%= f.submit 'Create Contact' %>
  </div>
<% end %>
