<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "jquery.js" %>

  <%= yield(:home) -%>
  <%= csrf_meta_tag %>
  <title>CarrieMail</title>

</head>
<body>
	<div id="main">
		<header>
			<%= render 'devise/menu/header_items' %>
		</header><!--#header-->
		<div class="clr"></div>
		<div id="container">
			<p style="color: green"><%= notice %></p>
			<p style="color: red"><%= alert %></p>

			<%= yield %>
			
			<div class="clr"></div>
			<div id="footer">
				<%= render 'devise/menu/footer_items' %>
			</div>
		</div><!--#container-->
	</div><!--#main-->
</body>
</html>
